@model LOGIN1.Models.Producto
@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>¿Estás seguro que deseas eliminar este producto?</h2>

<div>
    <h4>@Model.Nombre</h4>
    <p>Precio: $@Model.Precio</p>
    <p>Stock: @Model.Stock</p>
    <p>Categoría: @Model.Categoria?.Nombre</p>
</div>

<form asp-action="Eliminar">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
