@model List<LOGIN1.Models.Producto>




<div class="container mt-5">
 

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@(producto.ImagenUrl ?? "/infruit/pulpas/imagen-defecto.png")" class="card-img-top" alt="@producto.Nombre" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text"><strong>Precio:</strong> $@producto.Precio</p>

                            <form asp-action="AgregarAlCarrito" asp-controller="Usuario" method="post">
                                <input type="hidden" name="productoId" value="@producto.Id" />
                                <button type="submit" class="btn btn-success">Agregar al carrito 🛒</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning">No hay productos disponibles.</div>
            </div>
        }
    </div>
</div>
