@model LOGIN1.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2 class="text-danger">¿Estás seguro de que deseas eliminar este usuario?</h2>

<div class="border p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.IdUsuario</dd>

        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.NombreCompleto</dd>

        <dt class="col-sm-2">Correo:</dt>
        <dd class="col-sm-10">@Model.Correo</dd>

        <dt class="col-sm-2">Rol:</dt>
        <dd class="col-sm-10">@Model.Rol?.Nombre</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdUsuario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
