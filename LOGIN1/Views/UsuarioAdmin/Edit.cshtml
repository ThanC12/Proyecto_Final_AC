@model LOGIN1.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2 class="mb-4">Editar Usuario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdUsuario" />

    <div class="mb-3">
        <label asp-for="NombreCompleto" class="form-label"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" type="email" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RolId" class="form-label">Rol</label>
        <select asp-for="RolId" class="form-select" asp-items="ViewBag.Roles"></select>
        <span asp-validation-for="RolId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
