@model LOGIN1.ViewModels.FacturaDetalleVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Factura PDF</title>
    <style>
        body {
            font-family: Arial;
            font-size: 14px;
            margin: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            border: 1px solid #444;
            padding: 6px;
            text-align: left;
        }

        th {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <h2>Factura #@Model.Factura.Id</h2>
    <p><strong>Fecha:</strong> @Model.Factura.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Total:</strong> $@Model.Factura.Total.ToString("0.00")</p>

    <h4>Productos</h4>
    <table>
        <thead>
            <tr><th>Producto</th><th>Cantidad</th><th>Precio</th><th>Subtotal</th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Detalles)
            {
                <tr>
                    <td>@item.Producto?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>$@item.PrecioUnitario.ToString("0.00")</td>
                    <td>$@(item.Cantidad* item.PrecioUnitario).ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
